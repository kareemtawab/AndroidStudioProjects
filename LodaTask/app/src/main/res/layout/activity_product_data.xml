<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/global"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="70sp"
        android:elevation="0sp"
        android:padding="10sp"
        app:cardBackgroundColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-70sp"
        android:layout_marginEnd="-70sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50sp"
        >
        <ImageView
            android:id="@+id/productimage"
            android:layout_width="match_parent"
            android:layout_height="500sp"
            android:scaleType="centerCrop"
            android:elevation="15sp"
            android:src="@drawable/err"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/back"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:layout_marginStart="25sp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="25sp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15sp">

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:tint="@color/grey_dark" />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        >
        <RelativeLayout
            android:id="@+id/productdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25sp"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10sp"
                    app:cardBackgroundColor="@color/grey"
                    >

                    <ImageView
                        android:id="@+id/minus"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_subtract_24"
                        app:tint="@color/grey_dark"
                        />
                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/itemcount"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:hint="01"
                    android:textAlignment="center"
                    android:textColor="@color/grey_dark"
                    android:textColorHint="@color/grey_dark"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="10sp">

                    <ImageView
                        android:id="@+id/plus"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_add_24"
                        app:tint="@color/grey_dark"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="15sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Product Name"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:fontFamily="@font/poppins_medium"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:layout_marginBottom="-10sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_baseline_star_24"
                        app:tint="@color/yellow"
                        />
                    <TextView
                        android:id="@+id/rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:fontFamily="@font/poppins_medium"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginStart="10sp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(50 reviews)"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/grey_dark"
                        android:textSize="15sp"
                        android:layout_marginStart="20sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productdata"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/grey_dark"
            android:layout_marginStart="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="15sp"
            android:layout_above="@+id/savelayout"
            android:text="Description"
            android:textSize="20sp"
            />
        <RelativeLayout
            android:id="@+id/savelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="8"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/save"
                android:layout_width="80sp"
                android:layout_height="80sp"
                app:cardCornerRadius="10sp"
                android:layout_marginStart="30sp"
                android:layout_marginBottom="30sp"
                app:cardBackgroundColor="@color/grey"
                >
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/ic_baseline_bookmark_border_24"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                android:layout_height="80sp"
                app:cardCornerRadius="10sp"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_toEndOf="@id/save"
                android:layout_alignParentEnd="true"
                app:cardBackgroundColor="@color/black"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>