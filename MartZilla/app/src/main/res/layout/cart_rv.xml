<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/global"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:elevation="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:padding="10sp"
        app:cardBackgroundColor="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/titlelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/productimage"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:elevation="15sp"
                    android:src="@drawable/err"
                    app:civ_border_color="@color/orangedark"
                    app:civ_border_width="2sp"
                    app:civ_circle_background_color="@color/black" />
                <LinearLayout
                    android:id="@+id/productdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toStartOf="@id/deletebutton"
                    android:layout_toEndOf="@id/productimage"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/productname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textColor="@color/orangedark"
                        android:fontFamily="@font/intertight_bold"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/productcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category Name"
                        android:textAllCaps="true"
                        android:fontFamily="@font/intertight_bold"
                        android:textColor="@color/greydark"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/deletebutton"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_delete_24"
                    app:tint="@color/orangedark" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlelayout"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/orangelight"
                        app:cardCornerRadius="15sp">

                        <ImageView
                            android:id="@+id/minus"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_subtract_24"
                            app:tint="@color/white" />
                    </androidx.cardview.widget.CardView>

                    <EditText
                        android:id="@+id/itemcount"
                        android:layout_width="40sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/intertight_bold"
                        android:gravity="center"
                        android:hint="1"
                        android:textAlignment="center"
                        android:textColor="@color/orangedark"
                        android:textColorHint="@color/greydark"
                        android:textSize="20sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/orangelight"
                        app:cardCornerRadius="15sp">

                        <ImageView
                            android:id="@+id/plus"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_add_24"
                            app:tint="@color/white" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <TextView
                    android:id="@+id/productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="$4.99"
                    android:fontFamily="@font/intertight_bold"
                    android:textSize="25sp"
                    android:textColor="@color/orangedark"
                    android:layout_marginEnd="15sp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>