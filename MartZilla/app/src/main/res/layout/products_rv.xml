<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/global"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:elevation="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:padding="10sp"
        app:cardBackgroundColor="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/productimagecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15sp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="5sp"
                android:layout_toStartOf="@+id/favoritebutton"
                app:cardBackgroundColor="@color/white"
                >
                <ImageView
                    android:id="@+id/productimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:elevation="15sp"
                    android:src="@drawable/err"
                    app:civ_border_color="@color/orangedark"
                    app:civ_border_width="2sp"
                    app:civ_circle_background_color="@color/black" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/productdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/productimagecard"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                >
                <TextView
                    android:id="@+id/productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textColor="@color/orangedark"
                    android:fontFamily="@font/intertight_bold"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/productcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category Name"
                    android:textAllCaps="true"
                    android:fontFamily="@font/intertight_bold"
                    android:textColor="@color/greydark"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.99"
                    android:textColor="@color/orangedark"
                    android:fontFamily="@font/intertight_bold"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/addtocartbutton"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:layout_below="@id/favoritebutton"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                app:tint="@color/orangedark" />
            <ImageView
                android:id="@+id/favoritebutton"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_bookmark_border_24"
                app:tint="@color/orangedark" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>